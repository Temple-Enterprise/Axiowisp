{
  "name": "axiowisp",
  "version": "0.3.0",
  "private": true,
  "description": "Axiowisp â€” a modern desktop IDE built with Electron, React & Monaco",
  "author": "Temple Enterprise LLC",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm run dev:electron\"",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "dev:vite": "vite",
    "build:renderer": "tsc && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "preview": "vite preview",
    "package": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.axiowisp.app",
    "productName": "Axiowisp",
    "copyright": "0.3.0 | Temple Enterprise LLC | 2026",
    "artifactName": "Axiowisp.${ext}",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon-bg.png",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "lucide-react": "^0.453.0",
    "monaco-editor": "^0.52.2",
    "node-pty": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^26.8.1",
    "typescript": "^5.6.3",
    "vite": "^6.0.3"
  }
}